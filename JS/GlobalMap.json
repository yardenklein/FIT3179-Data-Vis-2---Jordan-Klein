{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 890,
  "height": 420,
  "params": [
    {
      "name": "Year_selection",
      "value": 2008,
      "bind": {
        "input": "range",
        "min": 2008,
        "max": 2022,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "JS/map_with_graticules.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "projection": {"type": "equalEarth"},
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "black",
        "strokeWidth": 0.5,
        "strokeOpacity": 0.5
      },
      "encoding": {
        "tooltip": {"field": "note"}
      }
    },
    {
      "data": {
        "url": "JS/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "#dff8ff"}
    },
    {
      "data": {
        "url": "JS/map_with_graticules.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "data/reshaped_gpi_data.csv"
      },
      "transform": [
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "JS/map_with_graticules.json",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {"filter": "datum.Year == Year_selection"}
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.5,
        "strokeOpacity": 0.5
      },
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "GPI",
          "title": "Global Peace Index",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1.5, 2, 2.5, 3, 3.5],
            "range": [
              "#ffffcc",
              "#d9f0a3",
              "#addd8e",
              "#78c679",
              "#31a354",
              "#006837"
            ]
          },
          "legend": {
            "orient": "bottom-left",
            "direction": "horizontal",
            "strokeColor": "black",
            "fillColor": "white",
            "padding": 3
          }
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {
            "field": "GPI",
            "type": "quantitative",
            "title": "GPI"
          }
        ]
      }
    }
  ],
  "config": {
    "font": "sulphur",
    "background": "#f8f8f8",
    "style": {"cell": {"stroke": "transparent"}}
  }
}
